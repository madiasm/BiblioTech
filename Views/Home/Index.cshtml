@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <!-- Barra de Pesquisa -->
    <section class="py-3 bg-danger text-white text-center rounded">
        <h2 class="text-uppercase">Encontre Seu Livro</h2>
        <form class="mt-3 row justify-content-center">
            <div class="col-md-8">
                <input type="text" class="form-control form-control-lg" placeholder="Digite o título..." />
            </div>
            <div class="col-md-2 mt-2 mt-md-0">
                <button type="submit" class="btn btn-lg btn-light w-100">Pesquisar</button>
            </div>
        </form>
    </section>

    <!-- Livros em Destaque -->
    <section class="py-5">
        <h2 class="text-center text-uppercase">Destaque</h2>
        <div class="container mt-4">
            <div class="d-flex justify-content-center overflow-hidden">
                <!-- Livro 1 -->
                <div class="card me-3" style="width: 120px;">
                    <img src="https://via.placeholder.com/120x200" class="card-img-top" alt="Livro 1">
                    <div class="card-body text-center">
                        <h6 class="card-title">Livro 1</h6>
                    </div>
                </div>
                <!-- Livro 2 -->
                <div class="card me-3" style="width: 120px;">
                    <img src="https://via.placeholder.com/120x200" class="card-img-top" alt="Livro 2">
                    <div class="card-body text-center">
                        <h6 class="card-title">Livro 2</h6>
                    </div>
                </div>
                <!-- Livro 3 -->
                <div class="card me-3" style="width: 120px;">
                    <img src="https://via.placeholder.com/120x200" class="card-img-top" alt="Livro 3">
                    <div class="card-body text-center">
                        <h6 class="card-title">Livro 3</h6>
                    </div>
                </div>
                <!-- Livro 4 -->
                <div class="card me-3" style="width: 120px;">
                    <img src="https://via.placeholder.com/120x200" class="card-img-top" alt="Livro 4">
                    <div class="card-body text-center">
                        <h6 class="card-title">Livro 4</h6>
                    </div>
                </div>
                <!-- Livro 5 -->
                <div class="card me-3" style="width: 120px;">
                    <img src="https://via.placeholder.com/120x200" class="card-img-top" alt="Livro 5">
                    <div class="card-body text-center">
                        <h6 class="card-title">Livro 5</h6>
                    </div>
                </div>
                <!-- Livro 6 -->
                <div class="card me-3" style="width: 120px;">
                    <img src="https://via.placeholder.com/120x200" class="card-img-top" alt="Livro 6">
                    <div class="card-body text-center">
                        <h6 class="card-title">Livro 6</h6>
                    </div>
                </div>
                <!-- Livro 7 -->
                <div class="card me-3" style="width: 120px;">
                    <img src="https://via.placeholder.com/120x200" class="card-img-top" alt="Livro 7">
