@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <!-- Barra de Pesquisa -->
    <section class="py-4 bg-primary text-white text-center rounded">
        <h2 class="text-uppercase">Encontre Seu Livro</h2>
        <form class="mt-3 row justify-content-center">
            <div class="col-md-8">
                <input type="text" class="form-control form-control-lg" placeholder="Digite o título ou autor do livro..." />
            </div>
            <div class="col-md-2 mt-2 mt-md-0">
                <button type="submit" class="btn btn-lg btn-light w-100">Pesquisar</button>
            </div>
        </form>
    </section>

    <!-- Livros em Destaque -->
    <section class="py-5">
        <h2 class="text-center text-uppercase">Livros em Destaque</h2>
        <div class="row mt-4">
            @* Substituir este código com dados reais do banco de dados *@
            <div class="col-md-4">
                <div class="card shadow">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Livro 1">
                    <div class="card-body">
                        <h5 class="card-title">Livro 1</h5>
                        <p class="card-text">Autor: João Silva</p>
                        <p class="text-muted">Gênero: Ficção</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Livro 2">
                    <div class="card-body">
                        <h5 class="card-title">Livro 2</h5>
                        <p class="card-text">Autor: Maria Souza</p>
                        <p class="text-muted">Gênero: Romance</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Livro 3">
                    <div class="card-body">
                        <h5 class="card-title">Livro 3</h5>
                        <p class="card-text">Autor: Pedro Lima</p>
                        <p class="text-muted">Gênero: Aventura</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Passo a Passo para Empréstimos -->
    <section class="py-5 bg-light rounded">
        <h2 class="text-center text-uppercase">Como Funciona o Empréstimo</h2>
        <p class="text-center text-muted mt-3">Emprestar um livro é rápido e fácil! Siga os passos abaixo:</p>
        <div class="row mt-4">
            <div class="col-md-4 text-center">
                <h3 class="text-primary">1</h3>
                <p>Escolha o livro desejado em nosso catálogo.</p>
            </div>
            <div class="col-md-4 text-center">
                <h3 class="text-primary">2</h3>
                <p>Visite nossa biblioteca ou solicite online.</p>
            </div>
            <div class="col-md-4 text-center">
                <h3 class="text-primary">3</h3>
                <p>Finalize o empréstimo e aproveite sua leitura!</p>
            </div>
        </div>
    </section>

    <!-- História de 3 Autores -->
    <section class="py-5">
        <h2 class="text-center text-uppercase">Conheça Nossos Autores</h2>
        <div class="row mt-4">
            <div class="col-md-4 text-center">
                <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Autor 1">
                <h5>João Silva</h5>
                <p class="text-muted">Autor de ficção com mais de 10 anos de experiência, conhecido por suas histórias envolventes.</p>
            </div>
            <div class="col-md-4 text-center">
                <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Autor 2">
                <h5>Maria Souza</h5>
                <p class="text-muted">Especialista em romances contemporâneos que tocam o coração e inspiram mudanças.</p>
            </div>
            <div class="col-md-4 text-center">
                <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Autor 3">
                <h5>Pedro Lima</h5>
                <p class="text-muted">Apaixonado por aventuras, Pedro leva os leitores a lugares fascinantes com sua escrita.</p>
            </div>
        </div>
    </section>
</div>
